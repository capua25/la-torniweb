<style>
    #ml{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    #items>div{
        background-color: var(--color13);
        display: flex;
        flex-wrap: nowrap;
        flex-direction: row;
        justify-content: space-evenly;
        gap: 15px;
        padding: 0 15px 0 15px;
    }
    #default-carousel{
        border-radius: 1rem;
        box-shadow: 5px 5px 5px var(--color9);
    }
</style>
